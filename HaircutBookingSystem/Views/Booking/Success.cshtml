@{
    ViewData["Title"] = "Request Received";

    // We use TempData to carry values across the redirect after POST.
    // In the future, if you save to a DB, you can load details by BookingId instead.
    var name = TempData["CustomerName"] as string ?? "Friend";
    var service = TempData["ServiceName"] as string ?? "Service";
    var date = TempData["DateText"] as string ?? "(date)";
    var time = TempData["TimeText"] as string ?? "(time)";
    var note = TempData["EmailNote"] as string; // shows when email is disabled or when sending failed
}

<div class="mt-4">
    <h1>Thanks, @name!</h1>

    <p>Your request for <strong>@service</strong> on <strong>@date</strong> at <strong>@time</strong> was received.</p>

    @* If Email:Send = false (dev mode) OR SMTP threw an error, we show a gentle note. *@
    @if (!string.IsNullOrWhiteSpace(note))
    {
        <div class="alert alert-info mt-3">@note</div>
    }

    @* When you later save to a database, you can show a confirmation number here:
     <p>Confirmation #: <strong>@Model.ConfirmationCode</strong></p> *@

    <a class="btn btn-primary mt-3" asp-controller="Booking" asp-action="Index">Make another booking</a>
</div>