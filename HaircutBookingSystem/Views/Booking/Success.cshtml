@{
    ViewData["Title"] = "Booking Confirmed";
    var name = TempData["CustomerName"] as string ?? "Friend";
    var service = TempData["ServiceName"] as string ?? "Service";
    var date = TempData["DateText"] as string ?? "(date)";
    var time = TempData["TimeText"] as string ?? "(time)";
    var code = TempData["ConfirmId"] as string ?? "—";
}
<div class="mt-4">
    <h1>Thanks, @name!</h1>
    <p>Your <strong>@service</strong> is booked for <strong>@date</strong> at <strong>@time</strong>.</p>
    <p>Confirmation ID: <strong>@code</strong></p>
    <a class="btn btn-primary mt-3" asp-controller="Booking" asp-action="Index">Book another time</a>
</div>
