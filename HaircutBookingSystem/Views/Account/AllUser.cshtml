@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>
@{
    ViewData["Title"] = "All Users";
    var userRoles = ViewBag.UserRoles as Dictionary<string, List<string>> ?? new();
}

<div class="auth-wrap mt-4">
    <div class="auth-card" style="max-width: 1000px;">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1 class="m-0">All Users</h1>
            <a class="btn btn-primary btn-cta" asp-action="Register">Add User</a>
        </div>

        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-info mb-0">No user in database yet.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-dark table-striped align-middle mb-0">
                    <thead>
                        <tr>
                            <th>User Name</th>
                            <th>Assigned Roles</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            var roles = userRoles.ContainsKey(user.Id) ? string.Join(", ", userRoles[user.Id]) : "—";
                            <tr>
                                <td>@user.UserName</td>
                                <td>@roles</td>
                                <td class="text-end">
                                    <a class="btn btn-outline-light btn-sm"
                                       asp-controller="Role" asp-action="AddUserRole" asp-route-id="@user.Id">
                                        Add Role
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
