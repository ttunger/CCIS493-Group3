@*
  _Layout.cshtml — 3-zone navbar:
  Left: Book Now  |  Center: Home/Book/Services/About/Contact  |  Right: Hello + Logout (blue)
  Collapses under hamburger on mobile.
*@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Haircut Booking System</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header class="mb-3 border-bottom">
        <nav class="navbar navbar-expand-lg navbar-dark nav-gradient sticky-top">
            <div class="container-fluid">

                <!-- Brand (optional) -->
                <a class="navbar-brand fw-bold d-lg-none" asp-controller="Home" asp-action="Index">Homepage</a>

                <!-- Hamburger (mobile) -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                        aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Collapsible content -->
                <div class="collapse navbar-collapse" id="mainNav">
                    <div class="nav-row w-100">
                        <!-- LEFT: Book Now -->
                        <div class="nav-left">
                            <a class="btn btn-primary btn-cta no-underline" asp-controller="Booking" asp-action="Index">Book Now</a>
                        </div>

                        <!-- CENTER: horizontal links -->
                        <div class="nav-center">
                            <ul class="navbar-nav nav-links">
                                <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                                <li class="nav-item"><a class="nav-link" asp-controller="Booking" asp-action="Index">Book</a></li>
                                <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Services">Services</a></li>
                                <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="About">About</a></li>
                                <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Contact">Contact</a></li>
                            </ul>
                        </div>

                        <!-- RIGHT: Hello + Logout (blue) -->
                        <div class="nav-right">
                            @if (User?.Identity?.IsAuthenticated ?? false)
                            {
                                <span class="navbar-text me-2">Hello, @User.Identity!.Name</span>
                                <form class="d-inline" asp-controller="Account" asp-action="Logout" method="post" asp-antiforgery="true">
                                    <button type="submit" class="btn btn-primary btn-cta no-underline">Logout</button>
                                </form>
                            }
                            else
                            {
                                <a class="btn btn-primary btn-cta no-underline" asp-controller="Account" asp-action="Login">Login</a>
                            }
                        </div>
                    </div>
                </div>

            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="py-3 text-center text-muted">
        <small>&copy; @DateTime.Now.Year Good Vibes Barbershop</small>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
