@model Microsoft.AspNetCore.Identity.IdentityRole
@{
    ViewData["Title"] = "Add Role";
}

<div class="auth-wrap mt-4">
    <div class="auth-card" style="max-width: 560px;">
        <h1>Add Role</h1>

        <form asp-controller="Role" asp-action="AddRole" method="post" asp-antiforgery="true">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary btn-cta w-100">Add Role</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
