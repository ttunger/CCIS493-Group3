@model HaircutBookingSystem.ViewModels.RoleAddUserRoleViewModel
@{
    ViewData["Title"] = "Assign Role";
}

<div class="auth-wrap mt-4">
    <div class="auth-card" style="max-width: 560px;">
        <h1>Assign Role</h1>
        <p class="mb-3">Pick a role for <strong>@Model.User.UserName</strong></p>

        <form asp-controller="Role" asp-action="AddUserRole" method="post" asp-antiforgery="true">
            <div asp-validation-summary="All" class="text-danger"></div>

            <input asp-for="@Model.User.Id" type="hidden" />

            <div class="mb-3">
                <label asp-for="Role" class="form-label"></label>
                <select asp-for="Role" asp-items="@Model.RoleList" class="form-select">
                    <option value="">-- Select a role --</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary btn-cta w-100">Add Role</button>
        </form>

        <div class="mt-3 text-center">
            <a class="btn btn-outline-light btn-sm" asp-controller="Account" asp-action="AllUser">Back to user list</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
