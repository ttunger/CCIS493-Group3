@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "All Roles";
}

<div class="auth-wrap mt-4">
    <div class="auth-card" style="max-width: 800px;">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1 class="m-0">All Roles</h1>
            <a class="btn btn-primary btn-cta" asp-action="AddRole">Add Role</a>
        </div>

        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-info mb-0">No roles found.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-dark table-striped align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Role Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var role in Model)
                        {
                            <tr>
                                <td>@role.Name</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
